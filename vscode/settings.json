// Place your settings in this file to overwrite the default settings
{
    "editor.fontFamily": "Fira Code, Hack, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 15,
    "editor.rulers": [ 80, 100 ],
    "editor.roundedSelection": false,
    "editor.renderIndentGuides": true,
    "explorer.openEditors.visible": 0,

    "workbench.editor.enablePreview": false,

    "rust.racerPath": "/Users/chris/.cargo/bin/racer",
    "rust.formatOnSave": true,
    "rust.checkOnSave": true,
    "rust.useNewErrorFormat": true,
    "rust.checkWith": "check-lib",

    "elm-format.formatOnSave": true,
    "workbench.sideBar.location": "left",
    "workbench.statusBar.visible": true,
    "window.zoomLevel": 0,
    "workbench.activityBar.visible": false,
    "window.titleBarStyle": "native",
    "editor.cursorBlinking": "smooth",
    "editor.tabSize": 2,
    "terminal.integrated.fontLigatures": true,
    "terminal.external.osxExec": "iTerm.app",
    "blankLine.showMessage": false,
    "workbench.editor.showTabCloseButton": false,
    "editor.wrappingIndent": "indent",
    "editor.renderLineHighlight": "all",
    "python.linting.mypyEnabled": true
  }
